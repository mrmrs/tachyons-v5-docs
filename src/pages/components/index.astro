---
import Layout from '../../layouts/Layout.astro';
import Badge from '../../components/Badge.astro';
import ButtonLink from '../../components/ButtonLink.astro';
import Blockquote from '../../components/Blockquote.astro';
import Header from '../../components/Header.astro';
import Card from '../../components/Card.astro';
import Link from '../../components/Link.astro';
import Avatar from '../../components/Avatar.astro';
import Alert from '../../components/Alert.astro';
import SlabStat from '../../components/SlabStat.astro';
import ComponentTitle from '../../components/ComponentTitle.astro';
import Footer from '../../components/Footer.astro';
---

<Layout title="Tachyons - Design at the speed of light">
  <Header />
  <div class='pb8'>
    <section>
    </section>
    <section class='dn p5'>
      <ComponentTitle>Link</ComponentTitle> 
      <Link href='https://tachyons.io' title='Tachyons'>A sample text link</Link>
    </section>
    <section class='dn p5'>
      <ComponentTitle>ButtonLink</ComponentTitle> 
      <div class='flex g4 mb4'>
        <ButtonLink href='#0' variant={1}>New</ButtonLink>
        <ButtonLink href='#0' variant={2}>Beta</ButtonLink>
        <ButtonLink href='#0' variant={3}>Alpha</ButtonLink>
        <ButtonLink href='#0' variant={4}>ButtonLink</ButtonLink>
        <ButtonLink href='#0' variant={5}>ButtonLink</ButtonLink>
        <ButtonLink href='#0' variant={6}>ButtonLink</ButtonLink>
        <ButtonLink href='#0' variant={7}>ButtonLink</ButtonLink>
        <ButtonLink href='#0' variant={8}>ButtonLink</ButtonLink>
        <ButtonLink href='#0' variant={9}>ButtonLink</ButtonLink>
      </div>
    </section>
    <section class='p5 grid g4 cols-min-64'>
      <ComponentTitle>Avatar</ComponentTitle> 
      <Avatar /> 
      <Avatar variant={2} /> 
      <Avatar variant={3} /> 
      <Avatar variant={4} /> 
      <Avatar variant={5} /> 
      <Avatar variant={6} /> 
      <Avatar variant={7} /> 
      <Avatar variant={8} /> 
    </section>
    <section class='p5'>
      <ComponentTitle>Badge</ComponentTitle> 
      <div class='flex g4 mb4'>
        <Badge variant={1}>New</Badge>
        <Badge variant={2}>Beta</Badge>
        <Badge variant={3}>Alpha</Badge>
        <Badge variant={4}>Badge</Badge>
        <Badge variant={5}>Badge</Badge>
        <Badge variant={6}>Badge</Badge>
        <Badge variant={7}>Badge</Badge>
        <Badge variant={8}>Badge</Badge>
        <Badge variant={9}>Badge</Badge>
      </div>
      <div class='flex flex-wrap g4 mb4'>
        <Badge class='blue'>Default</Badge>
        <Badge class='blue-dark'>Dark</Badge>
        <Badge class='blue-light'>Light</Badge>
        <Badge class='indigo'>Default</Badge>
        <Badge class='indigo-dark'>Dark</Badge>
        <Badge class='indigo-light'>Light</Badge>
        <Badge class='violet'>Default</Badge>
        <Badge class='violet-dark'>Dark</Badge>
        <Badge class='violet-light'>Light</Badge>
        <Badge class='magenta'>Default</Badge>
        <Badge class='magenta-dark'>Dark</Badge>
        <Badge class='magenta-light'>Light</Badge>
        <Badge class='red'>Default</Badge>
        <Badge class='red-dark'>Dark</Badge>
        <Badge class='red-light'>Light</Badge>
        <Badge class='red-orange'>Default</Badge>
        <Badge class='red-orange-dark'>Dark</Badge>
        <Badge class='red-orange-light'>Light</Badge>
        <Badge class='orange'>Default</Badge>
        <Badge class='orange-dark'>Dark</Badge>
        <Badge class='orange-light'>Light</Badge>
        <Badge class='gold'>Default</Badge>
        <Badge class='gold-dark'>Dark</Badge>
        <Badge class='gold-light'>Light</Badge>
        <Badge class='yellow'>Default</Badge>
        <Badge class='yellow-dark'>Dark</Badge>
        <Badge class='yellow-light'>Light</Badge>
        <Badge class='green'>Default</Badge>
        <Badge class='green-dark'>Dark</Badge>
        <Badge class='green-light'>Light</Badge>
        <Badge class='teal'>Default</Badge>
        <Badge class='teal-dark'>Dark</Badge>
        <Badge class='teal-light'>Light</Badge>
        <Badge class='cyan'>Default</Badge>
        <Badge class='cyan-dark'>Dark</Badge>
        <Badge class='cyan-light'>Light</Badge>
      </div>
    </section>
    <section class='p5 root'>
      <ComponentTitle>Blockquote</ComponentTitle> 
      <div class='grid g4 cols-1 cols-2-s'>
        <Blockquote author='Milton Glaser' variant={1}>
          “There are three responses to a piece of design – yes, no, and WOW! Wow is the one to aim for” 
        </Blockquote>
        <Blockquote author='Milton Glaser' variant={2}>
          “There are three responses to a piece of design – yes, no, and WOW! Wow is the one to aim for” 
        </Blockquote>
        <Blockquote author='Milton Glaser' variant={3}>
          “There are three responses to a piece of design – yes, no, and WOW! Wow is the one to aim for” 
        </Blockquote>
        <Blockquote author='Milton Glaser' variant={4}>
          “There are three responses to a piece of design – yes, no, and WOW! Wow is the one to aim for” 
        </Blockquote>
      </div>

    </section>
    <section class='p5'>
      <ComponentTitle>Alert</ComponentTitle> 
      <div class='grid g4 mb4'>
        <Alert variant={1}>Variant 1 Alert Style</Alert>
        <Alert variant={2}>Variant 2 Alert Style</Alert>
        <Alert variant={3}>Variant 3 Alert Style</Alert>
        <Alert variant={4}>Variant 4 Alert Style</Alert>
        <Alert variant={5}>Variant 5 Alert Style</Alert>
        <Alert variant={6}>Variant 6 Alert Style</Alert>
        <Alert variant={7}>Variant 7 Alert Style</Alert>
        <Alert variant={8}>Variant 8 Alert Style</Alert>
      </div>
      <div class='root grid g4 cols-3-s'>
        <Alert class='blue-dark'>An example of an alert</Alert>
        <Alert class='blue'>An example of an alert</Alert>
        <Alert class='blue-light'>An example of an alert</Alert>
        <Alert class='indigo-dark'>An example of an alert</Alert>
        <Alert class='indigo'>An example of an alert</Alert>
        <Alert class='indigo-light'>An example of an alert</Alert>
        <Alert class='magenta-dark'>An example of an alert</Alert>
        <Alert class='magenta'>An example of an alert</Alert>
        <Alert class='magenta-light'>An example of an alert</Alert>
        <Alert class='red-dark'>An example of an alert</Alert>
        <Alert class='red'>An example of an alert</Alert>
        <Alert class='red-light'>An example of an alert</Alert>
        <Alert class='red-orange-dark'>An example of an alert</Alert>
        <Alert class='red-orange'>An example of an alert</Alert>
        <Alert class='red-orange-light'>An example of an alert</Alert>
        <Alert class='orange-dark'>An example of an alert</Alert>
        <Alert class='orange'>An example of an alert</Alert>
        <Alert class='orange-light'>An example of an alert</Alert>
        <Alert class='gold-dark'>An example of an alert</Alert>
        <Alert class='gold'>An example of an alert</Alert>
        <Alert class='gold-light'>An example of an alert</Alert>
        <Alert class='yellow-dark'>An example of an alert</Alert>
        <Alert class='yellow'>An example of an alert</Alert>
        <Alert class='yellow-light'>An example of an alert</Alert>
        <Alert class='green-dark'>An example of an alert</Alert>
        <Alert class='green'>An example of an alert</Alert>
        <Alert class='green-light'>An example of an alert</Alert>
        <Alert class='teal-dark'>An example of an alert</Alert>
        <Alert class='teal'>An example of an alert</Alert>
        <Alert class='teal-light'>An example of an alert</Alert>
        <Alert class='cyan-dark'>An example of an alert</Alert>
        <Alert class='cyan'>An example of an alert</Alert>
        <Alert class='cyan-light'>An example of an alert</Alert>
      </div>

    </section>
    <section class='p5'>
      <ComponentTitle>SlabStat</ComponentTitle> 
      <div class='flex g5'>
        <SlabStat /> 
        <SlabStat variant={2} /> 
        <SlabStat variant={3} /> 
      </div>
    </section>
    <section class='p5'>
      <ComponentTitle>Card</ComponentTitle> 
      <div class='flex g4'>
        <div class='w-25'><Card /></div>
        <div class='w-100'><Card /></div>
      </div>
    </section>
  </div>
  <Footer />
</Layout>

