---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Card from '../components/Card.astro';
import Avatar from '../components/Avatar.astro';
import SlabStat from '../components/SlabStat.astro';
import Footer from '../components/Footer.astro';
import ComponentTitle from '../components/ComponentTitle.astro';
---

<Layout title="Tachyons - Design at the speed of light">
  <Header />
  <section class='gray-0 p4 p5-m p6-l'>
    <h1 class='m0'>Tachyons v5</h1>
    <p class='f5 f7-m f7-l fw9 m0 measure'>
      Curated themes. A lightweight responsive CSS toolkit. 
      A growing collection of customizable components.<br /><br />
      Now in early early beta.
    </p>
  </section>
  <div>
  <section class='p4'>
    <ComponentTitle>Avatar</ComponentTitle> 
    <Avatar /> 
  </section>
  <section class='p4'>
    <ComponentTitle>SlabStat</ComponentTitle> 
    <SlabStat /> 
  </section>
  </div>
  <Footer />
</Layout>

