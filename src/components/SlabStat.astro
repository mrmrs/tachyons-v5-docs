---
const { title = 'Sample stat count', text = '1,024', variant = 1 } = Astro.props;
---

{variant === 1 && 
  <dl>
    <dt class='f3 fw9'>{title}</dt>
    <dd class='m0 lh-solid f7 fw9'>{text}</dd>
  </dl>
}

{variant === 2 && 
  <dl>
    <dt class='f3 fw7'>{title}</dt>
    <dd class='m0 lh-solid f7 fw9'>{text}</dd>
  </dl>
}

{variant === 3 && 
  <dl>
    <dt class='f3 fw4'>{title}</dt>
    <dd class='m0 lh-solid f7 fw9'>{text}</dd>
  </dl>
}

{variant === 3 && 
  <dl>
    <dt class='f1 fw7 ttu tracked'>{title}</dt>
    <dd class='m0 lh-solid f7 fw9'>{text}</dd>
  </dl>
}
